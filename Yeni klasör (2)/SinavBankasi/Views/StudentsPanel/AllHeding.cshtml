@using EntityLayer.Concreate
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Heding>
@{
    ViewBag.Title = "AllHeding";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}


<html>

<body class="hold-transition sidebar-mini">

    <!-- Content Header (Page header) -->
    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Konular</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 20%">
                                Konu Adı
                            </th>
                            <th style="width:15%">
                                Oluşturan Eğitmen
                            </th>

                            <th style="width: 8%" class="text-center">
                                Ders
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>

                                <td>
                                    @item.HedingID
                                </td>

                                <td>
                                    <a>
                                        @item.HedingName
                                    </a>
                                    <br />
                                    <small>
                                        @(((DateTime)item.HedingDate).ToString("dd-MMM-yyyy"))
                                    </small>
                                </td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="table-avatar" src="~/Tema/dist/img/logo2.jpg">
                                        </li>

                                    </ul>
                                </td>


                                <td class="project-state">
                                    <span class="badge badge-success">@item.Category.CategoryName</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="/Default/Hedings/@item.HedingID">
                                        <i class="fas fa-folder">
                                        </i>
                                        İçerikler
                                    </a>


                                </td>

                            </tr>
                        }


                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>

</body>
</html>
@Html.PagedListPager((IPagedList)Model, p => Url.Action("AllHeding", new { p }), new PagedListRenderOptions
{
    LiElementClasses = new List<String>
    { "page-link"}
})



