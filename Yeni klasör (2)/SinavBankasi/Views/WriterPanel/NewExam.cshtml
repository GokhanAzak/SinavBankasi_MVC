@model EntityLayer.Concreate.Exam
@{
    ViewBag.Title = "NewExam";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

@using (Html.BeginForm("NewExam","WriterPanel", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Sınav Adı")
        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryName)
        <br />
        @Html.Label("Ders")
        @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })
        <br />
        @Html.Label("Eğitmen")
        @Html.TextBoxFor(x => x.WriterName,  new { @class = "form-control" })
        @Html.TextBoxFor(x=>x.WriterSurName , new { @class = "form-control" })

        <br />

        @Html.Label("Sınav Türü")
        @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
        <br />
        @Html.Label("Sınav Süresi")
        @Html.TextBoxFor(x => x.Duration, new { @class = "form-control" })
        <br />
        <br />

        <button class="btn btn-info"> Sınavı ekle</button>
    </div>
}


